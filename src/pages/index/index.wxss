/**index.wxss**/
.box{
  width: 72.5%;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
  font-family: "黑体";
  color: #fff;
}
.row{
  margin-top:20rpx;
  display:flex;
}
.row:nth-child(5){
  align-self: flex-start;
}
.background{
  background: url("/img/background.png") no-repeat center fixed;
  width:100%;  
  height:100%;  
  background-size:100% 100%;  
  position:absolute; 
}
.logo{
  width: 480rpx;
}
.contribute{
  width: 460rpx;
}
.radio{
  font-size: 30rpx;
  padding-top: 50rpx;
}
.input{
 padding-left: 10rpx;
 padding-top: 10rpx;
 font-size: 30rpx;
 color: #000;
}
.inputView{
 border: 5rpx solid #d2d2d2;
 background: #fff;
 width: 475rpx;
 height: 380rpx;
}

.image{
  height: 120rpx;
  width: 120rpx;
   margin-left: 32rpx;
  margin-right: 32rpx;
  background: #fff no-repeat center;
}
.submit{
  background: url("/img/btn.png") no-repeat center;
  width: 186rpx;
  height: 74rpx;
  background-size:100% 100%; 
}


